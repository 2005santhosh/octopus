    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const videoIntro = document.getElementById('videoIntro');
            const introVideo = document.getElementById('introVideo');
            const skipIntro = document.getElementById('skipIntro');
            const mainContent = document.getElementById('mainContent');
            
            // Function to end the intro and show the landing page
            function endIntro() {
                videoIntro.classList.add('fade-out');
                
                // After the fade-out transition, hide the intro and show the main content
                setTimeout(() => {
                    videoIntro.style.display = 'none';
                    mainContent.classList.add('visible');
                }, 500); // Changed from 1000ms to 500ms
            }
            
            // Event listener for when the video ends
            introVideo.addEventListener('ended', endIntro);
            
            // Event listener for the skip button
            skipIntro.addEventListener('click', endIntro);
            
            // Fallback: If the video fails to play, end the intro after 5 seconds
            setTimeout(() => {
                if (videoIntro.style.display !== 'none') {
                    endIntro();
                }
            }, 5000);
        });
