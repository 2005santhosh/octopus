        }

        .platform-icon.youtube {
            background-color: #FF0000;
        }

        .platform-icon.tiktok {
            background-color: #000000;
        }

        /* Gallery Modal */
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.8);
            z-index: 2000;
            justify-content: center;
            align-items: center;
        }

        .modal.active {
