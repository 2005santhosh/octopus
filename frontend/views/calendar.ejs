                const firstDay = new Date(currentYear, currentMonth, 1).getDay();
                const daysInMonth = new Date(currentYear, currentMonth + 1, 0).getDate();
                document.getElementById('currentMonth').textContent = `${monthNames[currentMonth]}`;
                const calendar = document.getElementById('mainCalendar');
                calendar.innerHTML = '';

                dayNames.forEach(day => {
                    const dayHeader = document.createElement('div');
                    dayHeader.className = 'day-header';
                    dayHeader.textContent = day;
                    calendar.appendChild(dayHeader);
                });

                for (let i = 0; i < firstDay; i++) {
                    const emptyDay = document.createElement('div');
                    emptyDay.className = 'calendar-day other-month';
                    calendar.appendChild(emptyDay);
                }

                for (let day = 1; day <= daysInMonth; day++) {
                    const dayElement = document.createElement('div');
                    dayElement.className = 'calendar-day';
                    const date = new Date(currentYear, currentMonth, day);
                    const dateString = formatDateForInput(date);

                    if (date.toDateString() === today.toDateString()) {
                        dayElement.classList.add('today');
                    }

                    if (selectedDate && date.toDateString() === selectedDate.toDateString()) {
                        dayElement.classList.add('selected');
                    }

                    // Check for all content types
                    const hasContent = uploadedContent.some(content => content.date === dateString);
                    if (hasContent) {
                        dayElement.classList.add('has-content');
                    }

                    // Check specifically for videos
                    const hasVideoContent = uploadedContent.some(content => content.date === dateString && (content.type === 'video' || content.type === 'reel'));
                    if (hasVideoContent) {
                        dayElement.classList.add('has-video');
                    }

                    const dayNumber = document.createElement('div');
                    dayNumber.className = 'day-number';
                    dayNumber.textContent = day;
                    dayElement.appendChild(dayNumber);

                    // Removed .day-events from being appended directly to calendar-day

                    dayElement.addEventListener('click', function() {
                        selectedDate = date;
                        renderCalendar(); // Re-render to update selected state
                        if (hasVideoContent) {
                            showContentDetails(date, 'video'); // Show only videos
                        } else if (hasContent) {
                            showContentDetails(date, 'all'); // Show all content if no specific videos
                        } else {
                            showDefaultContentDetails(); // If no content, show default message
                        }
                    });

                    calendar.appendChild(dayElement);
                }
            }

            // Show content details for a specific date and optionally filter by type
            function showContentDetails(date, filterType = 'all') {
                const contentDetails = document.getElementById('contentDetails');
                const contentDetailsTitle = document.getElementById('contentDetailsTitle');
                const contentDetailsList = document.getElementById('contentDetailsList');
                const defaultMessage = contentDetails.querySelector('.default-message');

                // Hide default message, show content sections
                defaultMessage.style.display = 'none';
                contentDetails.classList.remove('no-content-selected');
                contentDetails.querySelector('.content-details-header').style.display = 'flex';
                contentDetailsList.style.display = 'flex';


                const formattedDate = `${monthNames[date.getMonth()]} ${date.getDate()}, ${date.getFullYear()}`;

                contentDetailsList.innerHTML = ''; // Clear previous content

                let dateContent = uploadedContent.filter(content => content.date === formatDateForInput(date));

                if (filterType !== 'all') {
                    dateContent = dateContent.filter(content => content.type === filterType || content.type === 'reel'); // 'reel' is also a type of video
                }

                if (dateContent.length === 0) {
                    showDefaultContentDetails(); // If no content after filtering, show default
                    return;
                }

                // Update title based on filter
                if (filterType === 'video') {
                    contentDetailsTitle.textContent = `Video Content for ${formattedDate}`;
                } else {
                    contentDetailsTitle.textContent = `Content for ${formattedDate}`;
                }


                dateContent.forEach(content => {
                    const contentItem = document.createElement('div');
                    contentItem.className = 'content-details-item';
                    contentItem.innerHTML = `
                        <div class="content-details-icon ${content.platform}" aria-hidden="true">
                            <i class="fab ${getPlatformIcon(content.platform)}"></i>
                        </div>
                        <div class="content-details-info">
                            <div class="content-details-title-text">${content.title}</div>
                            <div class="content-details-platform">${content.platformName}</div>
                            <div class="content-details-time">${content.time}</div>
                        </div>
                        <div class="content-details-type ${content.type}">${content.type}</div>
                    `;
                    contentDetailsList.appendChild(contentItem);
                });

                contentDetails.classList.add('active');
            }

            // Hide content details and show default message
            function showDefaultContentDetails() {
                const contentDetails = document.getElementById('contentDetails');
                const defaultMessage = contentDetails.querySelector('.default-message');

                contentDetails.classList.add('no-content-selected');
                contentDetails.querySelector('.content-details-header').style.display = 'none';
                contentDetails.querySelector('.content-details-list').style.display = 'none';
                defaultMessage.style.display = 'flex'; // Show the default message
                contentDetails.classList.remove('active'); // Ensure it transitions in as default state
                setTimeout(() => { // Small delay to allow transition if needed
                    contentDetails.classList.add('active');
                }, 50);
            }


            // Render schedule items
            function renderScheduleItems(filter = 'all') {
                const scheduleList = document.getElementById('scheduleList');
                scheduleList.innerHTML = '';
                let filteredItems = scheduleItems;
                if (filter !== 'all') {
                    filteredItems = scheduleItems.filter(item => item.type === filter);
                }

                filteredItems.forEach(item => {
                    const scheduleItem = document.createElement('div');
                    scheduleItem.className = 'schedule-item';
                    scheduleItem.innerHTML = `
                        <div class="schedule-icon ${item.type}" aria-hidden="true">
                            <i class="fas ${getIconByType(item.type)}"></i>
                        </div>
                        <div class="schedule-details">
                            <div class="schedule-item-title">${item.title}</div>
                            <div class="schedule-meta">${item.platform} • ${item.date}</div>
                        </div>
                        <div class="schedule-time">${item.time}</div>
                        <div class="schedule-actions">
                            <button class="schedule-action" aria-label="Edit schedule item"><i class="fas fa-edit" aria-hidden="true"></i></button>
                            <button class="schedule-action delete" aria-label="Delete schedule item"><i class="fas fa-trash" aria-hidden="true"></i></button>
                        </div>
                    `;
                    scheduleList.appendChild(scheduleItem);
                });
            }

            // Render AI suggestions
            function renderSuggestions() {
                const suggestionsList = document.getElementById('suggestionsList');
                suggestionsList.innerHTML = '';
                suggestions.forEach(suggestion => {
                    const suggestionCard = document.createElement('div');
                    suggestionCard.className = 'suggestion-card';
                    suggestionCard.innerHTML = `
                        <div class="suggestion-header">
                            <div class="suggestion-type ${suggestion.type}">${suggestion.type}</div>
                            <button class="schedule-action" aria-label="Dismiss suggestion"><i class="fas fa-times" aria-hidden="true"></i></button>
                        </div>
                        <div class="suggestion-title">${suggestion.title}</div>
                        <div class="suggestion-desc">${suggestion.description}</div>
                        <div class="suggestion-footer">
                            <div class="suggestion-date">${suggestion.date}</div>
                            <button class="suggestion-action" aria-label="Use this suggestion">Use Suggestion</button>
                        </div>
                    `;
                    suggestionCard.querySelector('.suggestion-action').addEventListener('click', function() {
                        document.getElementById('createContentModal').classList.add('active');
                        document.getElementById('contentTitle').value = suggestion.title;
                        document.getElementById('contentDescription').value = suggestion.description;
                        document.getElementById('scheduleDate').value = formatDateForInput(new Date(suggestion.date));
                        document.querySelector(`.content-type[data-type="${suggestion.type}"]`).click();
                    });
                    suggestionsList.appendChild(suggestionCard);
                });
            }

            // Helper function to get icon by type
            function getIconByType(type) {
                switch (type) {
                    case 'blog': return 'fa-file-alt';
                    case 'video': return 'fa-video';
                    case 'social': return 'fa-share-alt';
                    case 'email': return 'fa-envelope';
                    case 'reel': return 'fa-video'; // Reel is also a video type
                    default: return 'fa-file';
                }
            }

            // Helper function to get platform icon
            function getPlatformIcon(platform) {
                switch (platform) {
                    case 'facebook': return 'fa-facebook-f';
                    case 'twitter': return 'fa-twitter';
                    case 'instagram': return 'fa-instagram';
                    case 'linkedin': return 'fa-linkedin-in';
                    case 'youtube': return 'fa-youtube';
                    default: return 'fa-globe';
                }
            }

            // Helper function to format date for input
            function formatDateForInput(date) {
                const year = date.getFullYear();
                const month = String(date.getMonth() + 1).padStart(2, '0');
                const day = String(date.getDate()).padStart(2, '0');
                return `${year}-${month}-${day}`;
            }

            // Helper function to format date for display
            function formatDateForDisplay(dateString) {
                const date = new Date(dateString);
                return `${monthNames[date.getMonth()]} ${date.getDate()}, ${date.getFullYear()}`;
            }

            // Helper function to format time for display
            function formatTimeForDisplay(timeString) {
                const [hours, minutes] = timeString.split(':');
                const hour = parseInt(hours);
                const ampm = hour >= 12 ? 'PM' : 'AM';
                const displayHour = hour % 12 || 12;
                return `${displayHour}:${minutes} ${ampm}`;
            }
        });
    </script>
